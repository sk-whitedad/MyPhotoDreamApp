@model MyPhotoDreamApp.Domain.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<h1>Вход</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form">
            <form asp-action="Login" asp-controller="Account">
                <div asp-validation-summary="All"></div>
                <p>
                    <input asp-for="PhoneNumber" type="text" placeholder="номер телефона">
                </p>
                <p>
                    <input asp-for="Password" type="password" placeholder="пароль">
                </p>
                <p>
                    <input type="submit" value="Отправить" />
                </p>
                <p class="message">Еще не зарегистрированы? <a asp-controller="Account" asp-action="Register">Регистрация</a></p>
            </form>
        </div>
    </div>
</div>
