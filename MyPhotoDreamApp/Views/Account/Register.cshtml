@model MyPhotoDreamApp.Domain.ViewModels.Account.RegisterViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Registration";
    //Layout = "_Layout";
}

<h1>Регистрация</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form">
            <form asp-action="Register" asp-controller="Account">
                <div asp-validation-summary="All"></div>
                <p>
                    <label asp-for="PhoneNumber"></label><br />
                    <input asp-for="PhoneNumber" type="PhoneNumber" placeholder="номер телефона">

                </p>
                <p>
                    <label asp-for="Password"></label><br />
                    <input asp-for="Password" type="password" placeholder="пароль">

                </p>
                <p>
                    <label asp-for="PasswordConfirm"></label><br />
                    <input asp-for="PasswordConfirm" type="password" placeholder="повторите пароль">

                </p>
                <p>
                    <input type="submit" value="Отправить" />
                </p>
                <p class="message">Уже зарегистрированы? <a asp-controller="Account" asp-action="Login">Войти</a></p>
            </form>
        </div>
    </div>
</div>





