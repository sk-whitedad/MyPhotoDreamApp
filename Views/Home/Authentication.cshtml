@model MyPhotoDreamApp.Models.User

@{
    ViewData["Title"] = "Authentication";
    Layout = "_Layout";
}

<h1>Авторизация</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form">
            <form asp-action="Authentication" asp-controller="home" >
                <p>
                    <input asp-for="PhoneNumber" type="text" placeholder="номер телефона">
                </p>
                <p>
                    <input asp-for="Password" type="password" placeholder="пароль">
                </p>
                <p>
                    <input type="submit" value="Отправить" />
                </p>
                <p class="message">Еще не зарегистрированы? <a asp-controller="Home" asp-action="Registration" >Регистрация</a></p>
            </form>
        </div>
    </div>
</div>
